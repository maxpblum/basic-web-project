    "watch": "onchange \"src/**/*.mts\" -- \"$npm_execpath\" run build",
    "liveServer": "live-server --port=12345",
    "dev": "\"$npm_execpath\" run build && concurrently --names \"BUILD,SERVER\" --prefixColors \"blue,green\" \"$npm_execpath run watch\" \"$npm_execpath run liveServer\""
  },
